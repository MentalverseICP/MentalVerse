# MentalVerse Backend Environment Variables
# Copy this file to .env and update the values

# Server Configuration
PORT=3001
NODE_ENV=development

# OpenAI API Configuration
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# CORS Configuration (Frontend URLs)
# Add your frontend domain for production
FRONTEND_URL=http://localhost:5173

# Internet Computer Integration
IC_NETWORK=ic
IC_HOST=https://ic0.app

# Canister IDs (replace with your deployed canister IDs)
MENTALVERSE_BACKEND_CANISTER=your-backend-canister-id
MVT_TOKEN_CANISTER=your-token-canister-id
SECURE_MESSAGING_CANISTER=your-messaging-canister-id

# Session Configuration
SESSION_MAX_AGE=86400000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Secret (generate a secure random string for production)
SESSION_SECRET=your_session_secret_here

# For Production Deployment
# NODE_ENV=production
# FRONTEND_URL=https://your-frontend-domain.com